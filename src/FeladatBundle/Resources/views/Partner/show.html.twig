{% extends '::base.html.twig' %}

{% block title %}Partner - részletek{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/feladat/tab/style.css') }}" type="text/css" media="screen" />
{% endblock %}
{% block body -%}
    <div class="body-container">
        <h1>Partner</h1>
        <div id="tab-container" class="tab-container">
            <ul class='etabs'>
                <li class='tab'><a href="#tab-alapadatok">Alapadatok</a></li>
                <li class='tab'><a href="#tab-telephelyek">Telephelyek</a></li>
                <li class='tab'><a href="#tab-kapcsolattartok">Kapcsolattartók</a></li>
            </ul>
            <div id="tab-alapadatok">
                <div class="table-responsive">
                    <table class="record_properties table-striped table-condensed table-bordered">
                        <tbody>
                            <tr>
                                <th>Cégnév</th>
                                <td>{{ entity.cegnev }}</td>
                            </tr>
                            <tr>
                                <th>Vezetéknév</th>
                                <td>{{ entity.vezeteknev }}</td>
                            </tr>
                            <tr>
                                <th>Keresztnév</th>
                                <td>{{ entity.keresztnev }}</td>
                            </tr>
                            <tr>
                                <th>Számlázási név</th>
                                <td>{{ entity.szamlazasiNev }}</td>
                            </tr>
                            <tr>
                                <th>Partner típus</th>
                                <td>{{ entity.partnertipus }}</td>
                            </tr>
                            <tr>
                                <th>E-mail</th>
                                <td>{{ entity.email }}</td>
                            </tr>
                            <tr>
                                <th>Székhely cím -irányítószám</th>
                                <td>{{ entity.szekhelyCimIrsz }}</td>
                            </tr>
                            <tr>
                                <th>Székhely cím -település</th>
                                <td>{{ entity.szekhelyCimTelepules }}</td>
                            </tr>
                            <tr>
                                <th>Székhelycím -közterület</th>
                                <td>{{ entity.szekhelyCimKozter }}</td>
                            </tr>
                            <tr>
                                <th>Székhely cím -házszám</th>
                                <td>{{ entity.szekhelyCimIhazsz }}</td>
                            </tr>
                            <tr>
                                <th>Számlázási cím -irányítószám</th>
                                <td>{{ entity.szamlazasiCimIrsz }}</td>
                            </tr>
                            <tr>
                                <th>Számlázási cím -település</th>
                                <td>{{ entity.szamlazasiCimTelepules }}</td>
                            </tr>
                            <tr>
                                <th>Számlázási cím -közterület</th>
                                <td>{{ entity.szamlazasiCimKozter }}</td>
                            </tr>
                            <tr>
                                <th>Számlázási cím -házszám</th>
                                <td>{{ entity.szamlazasiCimHazsz }}</td>
                            </tr>
                            <tr>
                                <th>Postázási cím -irányítószám</th>
                                <td>{{ entity.postazasiCimIrsz }}</td>
                            </tr>
                            <tr>
                                <th>Postázási cím -település</th>
                                <td>{{ entity.postazasiCimTelepules }}</td>
                            </tr>
                            <tr>
                                <th>Postázási cím -közterület</th>
                                <td>{{ entity.postazasiCimKozter }}</td>
                            </tr>
                            <tr>
                                <th>Postázási cím -házszám</th>
                                <td>{{ entity.postazasiCimHazsz }}</td>
                            </tr>
                            <tr>
                                <th>Adószám</th>
                                <td>{{ entity.adoszam }}</td>
                            </tr>
                            <tr>
                                <th>EU adószám</th>
                                <td>{{ entity.euAdoszam }}</td>
                            </tr>
                            <tr>
                                <th>Cégbejegyzési szám</th>
                                <td>{{ entity.cegbejegyzesiSzam }}</td>
                            </tr>
                            <tr>
                                <th>Telefon</th>
                                <td>{{ entity.telefon }}</td>
                            </tr>
                            <tr>
                                <th>Fax</th>
                                <td>{{ entity.fax }}</td>
                            </tr>
                            <tr>
                                <th>Mobil</th>
                                <td>{{ entity.mobil }}</td>
                            </tr>
                            <tr>
                                <th>Születésnap</th>
                                <td>{{ entity.szuletesnap|date }}</td>
                            </tr>
                            <tr>
                                <th>Anyja neve</th>
                                <td>{{ entity.anyjaNeve }}</td>
                            </tr>
                            <tr>
                                <th>Személyi igazolvány száma</th>
                                <td>{{ entity.szigSzam }}</td>
                            </tr>
                            <tr>
                                <th>Létrehozva</th>
                                <td>{{ entity.letrehozva|date }}</td>
                            </tr>
                            <tr>
                                <th>Létrehozta</th>
                                <td>{{ entity.letrehozo }}</td>
                            </tr>
                            <tr>
                                <th>Módosítva</th>
                                <td>{{ entity.modositva|date }}</td>
                            </tr>
                            <tr>
                                <th>Módosította</th>
                                <td>{{ entity.modosito }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('partner') }}">
                            Back to the list
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('partner_edit', { 'id': entity.id }) }}">
                            Edit
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>
            </div>         
            <div id="tab-telephelyek">
                <div class="table-responsive">
            <table class="records_list table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th>Név</th>
                        <th>Partner</th>              
                        <th>Cím</th>               
                        <th>Telefon</th>
                        <th>Fax</th>
                        <th>Mobil</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in telephelyek %}
                        <tr>
                            <td><a href="{{ path('telephely_show', { 'id': entity.id }) }}">{{ entity.nev }}</a></td>
                            <td>{{ entity.partner }}</td>               
                            <td>
                                {{ entity.irsz }} {{ entity.telepules }} {{ entity.kozter }} {{ entity.hazsz }}<br>
                                Alapértelmezett: {{ entity.alapertelmezett ? 'Igen' : 'Nem' }}
                            </td>
                            <td>{{ entity.telefon }}</td>
                            <td>{{ entity.fax }}</td>
                            <td>{{ entity.mobil }}</td>
                            <td>{{ entity.email }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('telephely_show', { 'id': entity.id }) }}">Részletek</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('telephely_edit', { 'id': entity.id }) }}">Szerkesztés</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
            </div>       
            <div id="tab-kapcsolattartok">
                <h2>Kapcsolattartók</h2>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('/bundles/feladat/tab/jquery.hashchange.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/bundles/feladat/tab/jquery.easytabs.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/bundles/feladat/tab/jquery.easytabs.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tab-container').easytabs();
        });
    </script>
{% endblock %}
